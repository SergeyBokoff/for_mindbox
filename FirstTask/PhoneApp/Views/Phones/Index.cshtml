@model List<Phone>
@{
    ViewBag.Title = "Мобильные телефоны";
}
<h2>Мобильные телефоны</h2>
<a asp-action="Add" asp-controller="Phones">Добавить смартфон</a>
<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Смартфоны еще не добавлены</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Компания</th>
                <th>Стоимость</th>
                <th>Действия</th>
                <th>Редактирование</th>
                <th>Сайт компании производителдя</th>
            </tr>
            @foreach (var phone in @Model)
            {
                <tr>
                    <td>@phone.Id</td>
                    <td>@phone.Name</td>
                    <td>@phone.Company</td>
                    <td>@phone.Price</td>
                    <td><a class="btn btn-dark" asp-controller="Orders" asp-action="Add" asp-route-phoneId="@phone.Id">Заказать</a></td>
                    <td><a class="btn btn-dark" asp-controller="Phones" asp-action="Edit" asp-route-phoneId="@phone.Id">Править</a>  |
                        <a class="btn btn-dark" asp-controller="Phones" asp-action="Delete" asp-route-phoneId="@phone.Id">Удалить</a>
                    </td>
                    <td><a class="btn btn-dark" asp-controller="Phones" asp-action="Company">Apple</a></td>
                </tr>
            }
        </table>
    }
</div>