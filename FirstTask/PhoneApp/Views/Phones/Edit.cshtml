@model Phone
@{
    ViewBag.Title = "Редактирование";
}
<h2>Редактирование</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Phones" method="post">
            <input hidden asp-for="Id" value="@Model.Id">
            <div class="form_row">
                <label for="">
                    Наименование
                    <input asp-for="Name" type="text">
                </label>
            </div>
            <div class="form_row mb-3">
                <label for="">
                    Компания
                    <input asp-for="Company" type="text">
                </label>
            </div>
            <div class="form_row mb-3">
                <label for="">
                    Стоимость
                    <input asp-for="Price" type="text">
                </label>
            </div>
            <button type="submit">Изменить</button>
        </form>
    </div>
</div>