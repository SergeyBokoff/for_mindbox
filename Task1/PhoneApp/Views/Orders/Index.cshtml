@model List<Order>
@{
    ViewBag.Title = "Заказы";
}
<h2>Заказы</h2>
<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Заказов ёщё не поступало</p>
    }
    else
    {
        <table style="width: 100%;">
            <tr>
                <th>Id</th>
                <th>Наименование</th>
                <th>Адрес</th>
                <th>Контактный телефон</th>
            </tr>
            @foreach (var order in @Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Name</td>
                    <td>@order.Address</td>
                    <td>@order.ContactPhone</td>
                </tr>
            }
        </table>
    }
</div>